{
  "name": "gestor-gastos",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:profile": "tsc -b && vite build --mode production --minify false",
    "build:size": "npm run build && npx bundlesize",
    "secrets:verify": "node scripts/verify-secrets.js",
    "secrets:check": "npm run secrets:verify",
    "analyze": "npm run build:analyze && open dist/bundle-analysis.html",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run src/**/*.test.{ts,tsx} --exclude src/__tests__/integration/**",
    "test:integration": "vitest run src/__tests__/integration/",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:coverage:report": "vitest run --coverage && start coverage/index.html",
    "test:coverage:unit": "vitest run src/**/*.test.{ts,tsx} --exclude src/__tests__/integration/** --coverage",
    "test:coverage:integration": "vitest run src/__tests__/integration/ --coverage",
    "pwa:icons": "node scripts/generate-icons.js",
    "pwa:convert": "node scripts/convert-svg-to-png.js",
    "pwa:shortcuts": "node scripts/create-shortcut-icons.js",
    "pwa:icons-full": "npm run pwa:icons && npm run pwa:convert && npm run pwa:shortcuts",
    "pwa:build": "npm run pwa:icons-full && npm run build",
    "pwa:test": "npm run build && npm run preview",
    "deploy:pwa": "npm run pwa:build && firebase deploy --only hosting",
    "quality:check": "npm run lint && npm run test:coverage",
    "quality:report": "npm run quality:check && start coverage/index.html",
    "bundle:analyze": "npm run build:analyze",
    "bundle:size": "npm run build && npx vite-bundle-analyzer dist",
    "optimize:imports": "node scripts/optimize-imports.cjs",
    "project:report": "node scripts/generate-project-report.js",
    "project:status": "npm run project:report",
    "ci:setup": "node scripts/setup-ci-cd.cjs",
    "ci:validate": "npm run lint && npm run test:coverage && npm run build",
    "ci:verify": "node scripts/verify-ci-cd.cjs",
    "ci:security": "npm audit && npm audit --production",
    "ci:performance": "npm run build && npx lhci autorun",
    "ci:deploy-staging": "firebase deploy --only hosting:staging",
    "ci:deploy-production": "firebase deploy --only hosting:production",
    "ci:release": "npm run ci:validate && npm run ci:security && npm run ci:deploy-production",
    "firebase:login": "firebase login",
    "firebase:init": "firebase init hosting",
    "firebase:deploy": "firebase deploy",
    "firebase:targets": "firebase target:apply hosting production gastos-hormigas && firebase target:apply hosting staging gastos-hormigas-staging",
    "github:secrets": "gh secret list",
    "github:workflows": "gh workflow list",
    "github:run": "gh run list --limit 5"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "firebase": "^11.9.1",
    "lucide-react": "^0.514.0",
    "nanoid": "^5.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.6.0",
    "recharts": "^2.15.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "glob": "^11.0.3",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "sharp": "^0.34.3",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-bundle-analyzer": "^1.2.1",
    "vitest": "^3.2.4"
  }
}
